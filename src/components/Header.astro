---
import HeaderLink from './HeaderLink.astro';
import LanguageSwitcher from './LanguageSwitcher.astro';
import { SITE_TITLE } from '../consts';

const currentPath = Astro.url.pathname;
const isEnglish = currentPath.startsWith('/en');

import navDe from '../i18n/nav/de.ts';
import navEn from '../i18n/nav/en.ts';

const nav = isEnglish ? navEn : navDe;
const langPrefix = isEnglish ? '/en' : '';
---
<header>
  <div class="top-bar">
    <!-- Site title / logo -->
    <div class="site-title">
      <a href={`${langPrefix}/`}>{SITE_TITLE}</a>
    </div>
	<div class="language">
	  <LanguageSwitcher />
	</div>
	
	</div>


	<div>
		<!-- Main nav -->
		<nav class="main-nav">
		  <HeaderLink href={`${langPrefix}/`}>{nav.home}</HeaderLink>
		  <HeaderLink href={`${langPrefix}/about`}>{nav.about}</HeaderLink>
		  <HeaderLink href={`${langPrefix}/profile`}>{nav.profile}</HeaderLink>
		  <HeaderLink href={`${langPrefix}/blog`}>{nav.blog}</HeaderLink>
		  <HeaderLink href={`${langPrefix}/projects`}>{nav.projects}</HeaderLink>
		  <HeaderLink href={`${langPrefix}/gallery`}>{nav.gallery}</HeaderLink>
		  <HeaderLink href={`${langPrefix}/contact`}>{nav.contact}</HeaderLink>
		</nav>
		
	</div>

</header>

<style lang="scss">
header {
  background: var(--background);
  padding: 1.5rem 1rem 0;
}

.top-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0 auto;
  padding: 0 1rem;
  color: #fff;
  width: 80%;
  margin: auto;
  border-bottom: 0.2rem solid (var(--accent));
  
  a {
	text-decoration: none;
	font-weight: 600;
  }
}

.site-title {
  font-weight: 700;
  font-size: 1.1rem;
  text-decoration: none;
  color: rgb(var(--black));
}

.main-nav {
  display: flex;
  justify-content: center;
  gap: 2rem;
  padding: 1rem 0 0.5rem;
  border-bottom: 0.2rem solid (var(--accent));
  max-width: 1000px;
  margin: 0 auto;
  flex-wrap: wrap;
  width: max-content;
  margin: auto;
}

.main-nav a {
	font-size: 1.2rem;
  font-weight: 600;
  text-decoration: none;
  color: rgb(var(--black));
  padding: 0.25rem 0;
  position: relative;
}

.main-nav a::after {
  content: '';
  position: absolute;
  left: 0;
  bottom: -6px;
  width: 100%;
  height: 3px;
  background-color: transparent;
  transition: background-color 0.2s ease;
}

.main-nav a:hover::after {
  background-color: var(--linkunderline);
}

.main-nav a.active::after {
  background-color: var(--linkunderline);
}

.language {
  min-width: 2.5rem;
  height: 2rem;
  margin-bottom: 0.5rem;

}

</style>
