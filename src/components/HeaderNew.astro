---
import HeaderLink from './HeaderLink.astro';
import LanguageSwitcher from './LanguageSwitcher.astro';
import { SITE_TITLE } from '../consts';


const currentPath = Astro.url.pathname;
const isEnglish = currentPath.startsWith('/en');

import navDe from '../i18n/nav/de.ts';
import navEn from '../i18n/nav/en.ts';

const nav = isEnglish ? navEn : navDe;
const langPrefix = isEnglish ? '/en' : '';
---
<header  class="">
  <div class="top-bar">
    <!-- Site title / logo -->
    <div class="site-title">
      <a href={`${langPrefix}/`}>{SITE_TITLE}</a>
    </div>

  	<div class="language">
	  <LanguageSwitcher />
	</div>
	
	</div>

    



	<div class="mainnavcontainer">
    <!-- Hamburger icon -->
        <input class="side-menu" type="checkbox" id="side-menu"/>
        <label class="hamb" for="side-menu"><span class="hamb-line"></span></label>
    <!-- Main nav -->  
		<nav class="main-nav">
		  <HeaderLink href={`${langPrefix}/`}>{nav.home}</HeaderLink>
		  <HeaderLink href={`${langPrefix}/about`}>{nav.about}</HeaderLink>
		  <HeaderLink href={`${langPrefix}/services`}>{nav.services}</HeaderLink>
		  <HeaderLink href={`${langPrefix}/blog`}>{nav.blog}</HeaderLink>
		  <HeaderLink href={`${langPrefix}/projects`}>{nav.projects}</HeaderLink>
		  <HeaderLink href={`${langPrefix}/gallery`}>{nav.gallery}</HeaderLink>
		  <HeaderLink href={`${langPrefix}/contact`}>{nav.contact}</HeaderLink>
		</nav>
		
	</div>

</header>

<style lang="scss">
header {
  background: var(--background);
  //padding: 1.5rem 1rem 0;
}


.top-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 1rem auto 0 auto;
  padding: 0.5rem 1rem;
  color: #fff;
  width: 80%;
  border-bottom: 0.2rem solid (var(--accent));
  
  a {
	text-decoration: none;
	font-weight: 600;
  }
}

.site-title {
  font-weight: 700;
  font-size: 1.1rem;
  text-decoration: none;
  color: rgb(var(--black));
}

      .side-menu {
        display: none;
      } /* Hide checkbox */

.main-nav {
  display: flex;
  justify-content: center;
  gap: 2rem;
  padding: 1rem 0 0.5rem;
  border-bottom: 0.2rem solid (var(--accent));
  max-width: 1000px;
  margin: 0 auto;
  flex-wrap: wrap;
  width: max-content;
  margin: auto;

  
}

.main-nav a {
	font-size: 1.2rem;
  font-weight: 600;
  text-decoration: none;
  color: rgb(var(--black));
  padding: 0.25rem 0;
  position: relative;
}

.main-nav a::after {
  content: '';
  position: absolute;
  left: 0;
  bottom: -6px;
  width: 100%;
  height: 3px;
  background-color: transparent;
  transition: background-color 0.2s ease;
}

.main-nav a:hover::after {
  background-color: var(--linkunderline);
}

.main-nav a.active::after {
  background-color: var(--linkunderline);
}

.language {
  min-width: 2.5rem;
  height: 2rem;
  margin-bottom: 0.5rem;

}

/* Responsive layout */
@media (max-width: 900px) {

  .top-bar{
    //border-bottom: 0;
  }

  .mainnavcontainer{

    width: 100%;
    position: relative;
    z-index: 1000;
    display: flex;
    justify-content: center;
    background-color: #fff;
    width: 80%;
    margin: 0.5rem auto;
    padding: 0 1rem;
    border-radius: 0.4rem;

        /* Menu Icon */
      .hamb{
        
        cursor: pointer;
        //position: absolute;
        padding: 1.5rem;
        //width: 100%;
      }/* Style label tag */
      
      .hamb-line {
        background: #000;
        display: block;
        height: 2px;
        position: relative;
        width: 24px;
      
      } /* Style span tag */
      
      .hamb-line::before,
      .hamb-line::after{
        background: #000;
        content: '';
        display: block;
        height: 100%;
        position: absolute;
        transition: all .2s ease-out;
        width: 100%;
        z-index: 1001;
      }
      .hamb-line::before{
        top: 5px;
      }
      .hamb-line::after{
        top: -5px;
      }
      
      .side-menu {
        display: none;
      } /* Hide checkbox */

      /* Toggle menu icon */
      .side-menu:checked ~ nav{
          padding-top: 4rem;
          max-height: 100%;
          background-color: var(--gray-light);
          gap:1rem;
          box-shadow: var(--box-shadow-card);
          border-radius: 0 0 0.4rem 0.4rem;

      }
      .side-menu:checked ~ .hamb .hamb-line {
          background: transparent;
      }
      .side-menu:checked ~ .hamb .hamb-line::before {
          transform: rotate(-45deg);
          top:0;
      }
      .side-menu:checked ~ .hamb .hamb-line::after {
          transform: rotate(45deg);
          top:0;
      }

      .side-menu:checked ~ .hamb {
        margin: -4.5rem;
        position: fixed;
        z-index: 1;


      }

      body:has(.side-menu:checked) {
        overflow: hidden;
      }
  }


  .main-nav{
    max-height: 0;
    //transition: max-height .01s ease-out;
    width: 100%;
    height: unset;
    position: fixed;
    //padding: 2rem;
    top: 0;
    left: 0;
    //background-color: #fff;
    overflow: hidden;
    // flex-direction: column;
    border-bottom: 0;

    a{
      width: 100%;
      z-index: 100;
      padding: 0 2rem ;
      text-align: center;

      &.active::after, &:hover::after{
        background-color: transparent !important;
      }
    }

  }
}

</style>
