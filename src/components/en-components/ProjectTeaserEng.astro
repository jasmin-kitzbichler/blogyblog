---
import { getCollection } from 'astro:content';
import FormattedDate from '../FormattedDate.astro';
import { Image } from 'astro:assets';

const projects = (await getCollection('projects'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<section class="project-preview">
  <div class="width-container">
    <span class="devider"></span>
    <div class="section-heading">
      <h2>Projects</h2>
    </div>
    <ul>
      {
        projects.map((project) => (
          <li>
            <a href={`/projects/${project.id}/`}>
              <div class="projectteaserImage">
                {project.data.image && (
                  <Image src={project.data.image} alt="" />
                )}
                <p class="date">
                  <FormattedDate date={project.data.pubDate} />
                </p>
              </div>
            <div class="cardbottom">
              <h3>{project.data.title}</h3>
              <p>{project.data.description}</p>
            </div>
            </a>
          </li>
        ))
      }
    </ul>
    <p class="more-link">
      <a href="/projects">View all Projects â†’</a>
    </p>
  </div>
</section>

<style lang="scss">
.project-preview {
  margin-top: -2rem;
  padding-top: 2rem;
  padding-bottom: 1rem;
  background-color: #CCCCCC;
  border-radius: 2rem 2rem 0 0;
  box-shadow: var(--box-shadow-section);

  .devider {
    display: block;
    border-top: 0.2rem solid var(--accent);
    width: 100%;
    height: 1px;
  }

  .projectteaserImage {
    position: relative;
    font-family: 'Inter', sans-serif;

    img {
      max-width: 100%;
      height: 200px;
      object-fit: cover;
      border-radius: 16px 16px 0 0;
    }

    .date {
      background-color: white;
      padding: 0.4rem 0.5rem;
      border-radius: 0.5rem;
      width: fit-content;
      position: absolute;
      bottom: 0;
      left: 0;
      margin: 1.5rem 1rem;
      box-shadow: var(--box-shadow);
    }

}

.cardbottom {

      border-radius: 16px;
      margin-top: -1rem;
      position: relative;
      z-index: 10;
      background-color: var(--gray-light);
      padding: 1rem 0;
      box-shadow: var(--box-shadow-cardbottom);


    p {
      text-align: center;
      margin: 0.5rem 1rem;
    }

    h3 {
      border-top: 0.15rem solid #fff;
      border-bottom: 0.15rem solid #fff;
      margin: 0.5rem;
      padding: 0.5rem;
      font-family: "Inter", sans-serif;
      font-weight: 600;
      font-size: 1.2rem;
      text-align: center;
    }
}

ul {
    list-style: none;
    padding: 0;
    display: flex;
    justify-content: space-between;
}
li {
    width: 31%;
    background-color: #d6d6d6;
    box-shadow: var(--box-shadow-card);
    border: 0.2rem solid #fff;
    border-radius: 16px;
    transition: transform 0.3s ease;

    &:hover {
      transform: scale(1.05);
    }
}
a {
    text-decoration: none;
    color: inherit;
  }


  .more-link {
    margin: 2rem 0 1rem 0;
    text-align: right;
    display: block;
    font-weight: 600;

    a {
      position: relative;

      &::after {
        content: '';
        position: absolute;
        left: 0;
        bottom: -6px;
        width: 100%;
        height: 3px;
        background-color: transparent;
        transition: background-color 0.2s ease;
      }

      &:hover::after {
        background-color: var(--linkunderline);
      }
    }
  }
}

  @media (max-width: 900px) {
    .project-preview ul {
      flex-direction: column;

      li{
        width: 100%;
        margin: 1em 0;

        img {
          height: 350px;
        }
      }
    }
  }

  @media (min-width: 1800px) {
    .project-preview {
      z-index: 2;
      position: relative;

      li .projectteaserImage img {
        height: 400px;
      }
    }
}
</style>
