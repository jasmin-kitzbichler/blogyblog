                li {
                    margin: 0.5rem;
                    padding: 0.3rem 0.6rem;
                    border: 0.2rem solid (var(--accent));
                    border-radius: 16px;
                    list-style-type: none;
                    position: relative;

                }

                li.addinfo-small {


                    p{
                        display: none;
                    }

                    &:after{
                        content:'';
                        background-image: url(../assets/information.png);
                        background-size: cover;
                        margin: 0 0.5rem;
                        width: 1.5rem;
                        height: 1.5rem;
                        position: absolute;
                    }

                    &:hover{
                        p {
                            display: flex;
                            align-items: center;
                            justify-content: center;
                            position: absolute;
                            top: 0;
                            left: 0;
                            background-color: rgba(0, 0, 0, 0.7);
                            border-radius: 16px;
                            width: 100%;
                            height: 100%;
                            color:#fff;
                            margin: 0;
                            padding: 0;
                        }

                        &:after{
                            display: none;
                        }
                    }
                }

                li.addinfo-big {

                    position: unset;


                    p{
                        display: none;
                    }

                    &:after{
                        content:'';
                        background-image: url(../assets/information.png);
                        background-size: cover;
                        margin: 0 0.5rem;
                        width: 1.5rem;
                        height: 1.5rem;
                        position: absolute;
                    }

                    &:hover{
                        p {
                            display: flex;
                            align-items: center;
                            justify-content: center;
                            position: absolute;
                            top: 0;
                            left: 0;
                            background-color: rgba(0, 0, 0, 0.7);
                            border-radius: 16px;
                            width: 100%;
                            height: 100%;
                            color:#fff;
                            margin: 0;
                            padding: 2rem;
                            z-index: 10;
                            box-sizing: border-box;
                        }

                        &:after{
                            display: none;
                        }
                    }
                }
            }

            .hardskill { grid-area: 1 / 1 / 3 / 2; }
            .softskill { grid-area: 2 / 2 / 4 / 3; }
            .education { grid-area: 1 / 2 / 2 / 4; }
            .jobs { grid-area: 2 / 3 / 3 / 4; }
            .langs { grid-area: 3 / 1 / 4 / 2; }
