---
import BaseHead from '../components/BaseHead.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Image } from 'astro:assets';

// 1. Bilder importieren
const modules = import.meta.glob('/src/assets/snapshots/*.{jpg,png}', { eager: true });
let images = Object.values(modules).map((m: any) => m.default);

// 2. Shuffle-Funktion (Fisher-Yates)
function shuffle(array: any[]) {
  for (let i = array.length - 1; i > 0; i--) {
    const j = Math.floor(Math.random() * (i + 1));
    [array[i], array[j]] = [array[j], array[i]];
  }
  return array;
}

images = shuffle(images);
---

<html lang="de">
  <head>
	<BaseHead title="Galerie"
description="Einblicke in meine Welt - Momentaufnahmen aus Sport, Wettkampf und Alltag."
></BaseHead>
</head>
  <body>
    <Header />
    <section class="snapshot-gallery">
      <h1 class="subpage-heading">Galerie</h1>

      <div class="gallery-columns">
        {
          images.map((img) => (
            <Image
              src={img}
              alt=""
              widths={[400, 600, 800]}
              sizes="(max-width: 720px) 100vw, 33vw"
              loading="lazy"
            />
          ))
        }
      </div>
    </section>
    <Footer/>
  </body>
</html>

<style>
.snapshot-gallery {
  max-width: 1600px;
  width: 80%;
  margin: 2rem auto 3rem auto;
  //padding: 0 1rem;
}

.gallery-columns {
  column-count: 3;
  column-gap: 1rem;
}

.gallery-columns img {
  width: 100%;
  transition: transform 0.3s ease;
  border: 0.2rem solid #fff;
  border-radius: 16px;
  margin-bottom: 1rem;
}

.gallery-columns img:hover {
  transform: scale(1.02);
  //box-shadow: var(--box-shadow);
}

@media (max-width: 900px) {
  .gallery-columns {
    column-count: 2;
  }
}

@media (max-width: 600px) {
  .gallery-columns {
    column-count: 1;
  }
}
</style>
